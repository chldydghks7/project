<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   <!-- 규칙 -->
  
 <mapper namespace="group.riding.HotplaceMapper">
  
    <select id="lonlat" resultType="HotplaceBean">
    	select * 
    	from gr_data
    	where 1 > speed
    </select>
    
    <!-- 일정등록 핫플 마커 -->
    <select id="getHotPlace" resultType="HotplaceBean">
    	select * 
		from hotplace
    </select>
    
 </mapper>